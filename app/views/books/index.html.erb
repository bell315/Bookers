<h1>Books</h1>
  <table>
    <div>
      <th>title</th>
      <th>body</th>
    </div>
  <% @books.each do |book| %>
    <div>
      <span><%= book.title %></span>
      <span><%= book.body %></span>
      <%= link_to "show", book_path(book.id) %>
      <%= link_to "Edit", edit_book_path(book.id) %>
      <%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
     </div>
  <% end %>
  </table>


<h3>New Book</h3>
<!-- form_for部分 -->


  <% if @book.errors.any? %>
    <h3>errors入力した内容にエラーが<%= @book.errors.count %>件あります</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>

<%= form_for(@book) do |f| %>

    <h4>title</h4>
    <%= f.text_field :title %>

    <h4>body</h4>
    <%= f.text_area :body %>
    <div>
      <%= f.submit 'Create Book' %>
    </div>

<% end %>