<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>

      <% if @book.errors.any? %>
    <h3>errors入力した内容にエラーが<%= @book.errors.count %>件あります</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>

    <h4>title</h4>
    <%= f.text_field :title %>
    <h4>body</h4>
    <%= f.text_area :body %>
    <div>
      <%= f.submit 'Update Book' %>
    </div>
    <div>
      <%= link_to "show", book_path %>
      <%= link_to "Back", books_path %>
    </div>
<% end %>
